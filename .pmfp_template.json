{
    "language": "py",
    "description": "python自带的json-rpc的客户端和服务器模板",
    "author": "hsz12",
    "template_type": "server",
    "requires": [
        "jsonrpclib-pelix >= 0.4.2",
        "schema_entry >= 0.1.5",
        "pyloggerhelper >= 0.0.2"
    ],
    "template_keys": {
        "project_name_camelcase": {
            "description": "",
            "default": "{{ project_name | replace(\"_\", \" \") | replace(\"-\", \" \") | title | replace(\" \", \"\") }}"
        },
        "project_name": {
            "description": "",
            "default": "{{ project_name }}"
        }
    },
    "components": {
        "app": {
            "source": "app",
            "description": "jsonrpc的服务端模板",
            "default_path": "app"
        },
        "cli": {
            "source": "cli.py",
            "description": "jsonrpc的客户端模板",
            "default_path": "{{ project_name | lower }}_cli.py"
        }
    }
}